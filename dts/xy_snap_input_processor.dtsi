/ {
    xy_snap: xy_snap {
        compatible = "zmk,xy-snap-input-processor";
        #input-processor-cells = <0>;
        
        // 共通パラメータ
        idle-timeout-ms = <500>;
        
        // Traditional Mode用パラメータ
        switch-threshold = <20>;
        allow-axis-switch;
        
        // Keyball Mode用パラメータ
        switch-ratio = <30>;
        continue-timeout-ms = <1000>;
        
        status = "okay";
    };
}; 